{
  "name": "@ito/ito",
  "version": "0.0.1",
  "description": "A hosted smart-contract runtime using secure ledgers.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "test": "ava -s test/*.ts"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "author": "Paul Frazee <pfrazee@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "compact-encoding": "^2.5.1",
    "confine-sandbox": "^0.3.1",
    "core-js-pure": "^3.20.1",
    "hyperbee": "^1.7.0",
    "hypercore": "^10.0.0-alpha.19",
    "ito-confine-runtime": "^0.4.0",
    "lodash.isequal": "^4.5.0",
    "msgpackr": "^1.5.2",
    "pump": "^3.0.0",
    "random-access-memory": "^4.0.0",
    "stream-to-it": "^0.2.4",
    "streamx": "^2.12.0"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.5",
    "@types/node": "^16.6.2",
    "@types/pump": "^1.1.1",
    "@types/streamx": "^2.9.1",
    "ava": "^3.15.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  }
}
